@model List<ManageUsersRoleViewModel>
@{
	ViewData["Title"] = "Manage";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
	<div class="card">
		<div class="card-header">
			<h2>Manage User Roles</h2>
			Add/Remove Roles for user <strong>@ViewBag.UserName</strong>
		</div>
		<div class="card-body">
			@for (int i = 0; i < Model.Count; ++i)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model[i].RoleId" />
					<input type="hidden" asp-for="@Model[i].RoleName" />
					<input asp-for="@Model[i].IsSelectedRole" class="form-check-input" />
					<label class="form-check-label" asp-for="@Model[i].IsSelectedRole">
						@Model[i].RoleName
					</label>
				</div>
			}
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="card-footer">
			<button type="submit" class="btn btn-primary">Update</button>
			<a asp-action="Manage" asp-route-id="@ViewBag.UserId" class="btn btn-primary" style="width:auto">Cancel</a>
		</div>
	</div>
</form>
